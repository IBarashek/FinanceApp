@model FinanceApp.Models.Expense
<div class="container">
    <h2>Add Expense</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Description" class="form-label">Описание</label>
            <input asp-for="Description" class="form-control"/>
        </div>
        <div>
            <label asp-for="Amount" class="form-label"> Деньга</label>
            <input asp-for="Amount" class="form-control"/>
        </div>
        <div>
            <label asp-for="Category" class="form-label"> Категория</label>
            <input asp-for="Category" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primaty" style="background: lightgray"> Add Expense</button>
    </form>
</div>